doctype html

html.no-js(lang='en')
    head
        meta(charset='UTF-8')
        // <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        title login and sign up page
        meta(name='viewport', content='width=device-width, initial-scale=1.0')
        meta(name='description', content='Login and Registration Form with HTML5 and CSS3')
        meta(name='keywords', content='html5, css3, form, switch, animation, :target, pseudo-class')
        meta(name='author', content='Codrops')
        link(rel='shortcut icon', href='../favicon.ico')
        //link(rel='stylesheet', type='text/css', href='css/demo.css')
        link(rel='stylesheet', type='text/css', href='/stylesheets/style2.css')
        link(rel='stylesheet', type='text/css', href='/stylesheets/animate-custom.css')
        link(rel='stylesheet', href='/stylesheets/demo.css')
    body
        script(src='//ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js')
        script(src='/js/main.js')
        .container
            header
                h1 TETRIS
            section
                #container_demo
                    // hidden anchor to stop jump http://www.css3create.com/Astuce-Empecher-le-scroll-avec-l-utilisation-de-target#wrap4
                    a#toregister.hiddenanchor
                    a#tologin.hiddenanchor
                    #wrapper
                        #login.animate.form
                            form(method='POST' action='/dbAPI/login')
                                h1 log in
                                #divError Your username or password are incorrect
                                p.form-group
                                    label(for='username', data-icon='u')  Your email or username
                                    input#username(name='username', required='required', type='text', placeholder='myusername or mymail@mail.com')
                                p
                                    label(for='password', data-icon='p')  Your password
                                    input#password(name='password', required='required', type='password', placeholder='eg. X8df!90EO')
                                p.keeplogin
                                    input#loginkeeping(type='checkbox', name='loginkeeping', value='loginkeeping')
                                    label(for='loginkeeping') Keep me logged in
                                p.login.button
                                    input(type='submit', value='Login')
                                p.change_link
                                    | Not a member yet ?
                                    a.to_register(href='#toregister') Join us
                        #register.animate.form
                            form(method='POST' action='/dbAPI/users')
                                h1  sign up
                                p.form-group
                                    label(for='name') Name:
                                    input#name.form-control(type='text', placeholder='first and last' name='name')
                                p.form-group
                                    label(for='email') Email:
                                    input#email.form-control(type='email', placeholder='name@email.com' name='email')
                                p.form-group
                                    label(for='pw') Password:
                                    input#pw.form-control(type='password' name='password')
                                p.signin.button
                                    input(type='submit', value='Sign up')
                                p.change_link
                                    | Already a member ?
                                    a.to_register(href='#tologin')  Go and log in
